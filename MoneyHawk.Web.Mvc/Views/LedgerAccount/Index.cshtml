@using MoneyHawk.Core
@using Net.Web
@model IList<MoneyHawk.Core.LedgerAccount>

@{
    ViewBag.Title = "Ledger accounts";
}

@{
    var grid = new WebGrid<LedgerAccount>(source:Model); 
}

<div id="grid">
    @grid.GetHtml(
                tableStyle: "table table-striped table-bordered",
        headerStyle: "head",
        alternatingRowStyle: "alt"
    )
</div>